<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_tag(admin_settings_path, method: "post", html: { class: "form-horizontal"}) do %>
    <div class="row">
      <div class="col-md-9">
        <h3 class="f-30 text-uppercase">Configuraciones generales</h3>
      </div>
      <div class="col-md-3">
        <%= link_to "Volver", 'javascript:history.go(-1);', class: "btn btn-default btn-block btn-sm m-t-20 text-uppercase" %>
      </div>
    </div>
    <table class="table admin-datatable display m-b-20">
        <tbody id="configurations-fields">
            <tr class="fields">
              <td>
                Ejemplo
              </td>
              <td colspan="2">
                <%= text_field_tag 'example', @setting['example'], placeholder: "Ejemplo", class: "form-control input-sm" %>
              </td>
            </tr>
        </tbody>
      </table>
    <div class="form-actions row">
      <div class="col-md-3 pull-right">
        <%= submit_tag "Guardar", class: "btn btn-success btn-block" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
