  <div class="col-md-5">
    <table class="table table-striped">
    <caption>Detalles</caption>
      <tbody>
        <tr>
          <td>Email</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>Rol</td>
          <td><%= @user.role %></td>
        </tr>
        <tr>
          <td>Registro</td>
          <td><%= l @user.created_at %></td>
