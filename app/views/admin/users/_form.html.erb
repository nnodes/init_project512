<%= simple_form_for([:admin, @user], wrapper: false, label: false) do |f| %>
  <div class="form-group">
    <label class="col-sm-4 control-label">Email</label>
    <div class="col-sm-8">
    <%= f.input :email, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Rol</label>
    <div class="col-sm-8">
      <%= f.input :role, collection: User.roles.keys, label: false, include_blank: false  %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Activo</label>
    <div class="col-sm-8">
      <%= f.input :active, as: :radio_buttons, item_wrapper_class: 'radio-inline', label: false  %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label">Contraseña</label>
    <div class="col-sm-8">
    <%= f.input :password, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Confirma Contraseña</label>
    <div class="col-sm-8">
    <%= f.input :password_confirmation, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
