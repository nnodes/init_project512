<div class="row mt-5 mb-2">
  <div class="col-sm-9">
    <h3 class="text-uppercase">Banner</h3>
  </div>
  <div class="col-sm-3">
    <%= link_to 'Nuevo banner', new_admin_slide_path, class: 'btn btn-primary btn-block  ' %>
  </div>
</div>
<div class="banner">
  <div class="content">
    <%= render partial: 'slides/home_carousel', locals: { slides: @slides.where(active: true) } %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped nn-default-datatable  ">
    <thead>
      <tr>
        <th>Orden</th>
        <th>Título</th>
        <th>Activo</th>
        <th>Fecha de creación</th>
        <th style="width:140px;min-width:140px;max-width:140px;" data-orderable="false"></th>
      </tr>
    </thead>
    <tbody>
      <% @slides.each do |slide| %>
        <tr>
          <td><%= slide.position %></td>
          <td><%= slide.title %></td>
          <td><%= slide.active ? 'Si' : 'No' %></td>
          <td><%= slide.created_at %></td>
          <td><%= link_to 'Ver', admin_slide_path(slide), class: "btn btn-success btn-xs" %> 
              <%= link_to 'Editar', edit_admin_slide_path(slide),  class: "btn btn-warning btn-xs" %> 
              <%= link_to 'Eliminar', admin_slide_path(slide), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: '¿Estás seguro de eliminar este banner?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
