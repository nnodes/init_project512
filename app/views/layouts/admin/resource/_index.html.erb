<div class="row">
  <div class="col-md-9">
    <h3 class="text-uppercase"><%= title %></h3>
  </div>
  <div class="col-md-3">
    <%= link_to new_object_text, new_object_path(object_name),
                class: 'btn btn-primary btn-block btn-sm m-t-20 text-uppercase'
    %>
  </div>
</div>
<div class="table-responsive">
  <table class="table nn-admin-<%= object_name.pluralize %>-datatable display
                m-b-20"
         data-source="<%= data_source(object_name) %>">
    <thead>
      <tr>
        <%= yield :table_header %>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>