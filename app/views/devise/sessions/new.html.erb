<div class="row align-items-center justify-content-center">
  <div class="col-sm-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="form-group">
          <label>Email</label>
          <%= f.input :email, required: false, autofocus: true, wrapper:false, label:false, input_html: {class: "form-control"} %>
        </div>
        <div class="form-group clearfix">
          <label>Contraseña</label>
          <%= f.input :password, required: false, wrapper:false, label:false, input_html: {class: "form-control"} %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: 'pull-right' %>
          <% end -%>
        </div>
        <div class="checkbox-small">
          <%= f.input :remember_me, label: "Recuérdame", as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Iniciar Sesión", class: "btn-primary btn btn-block" %>
      </div>
    <% end %>
    <%# render "devise/shared/links" %>
  </div>
</div>
