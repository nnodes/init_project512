<div class="col-md-4 col-md-offset-4">
  <div class="card">
    <img class="logo m-b-30" alt="Nnodes" src="<%= asset_path 'logo.png' %>" height="50">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <label>Nombre</label>
      <%= f.input :email, required: false, autofocus: true, wrapper:false, label:false, input_html: {class: "box"} %>
      <label>Contrase√±a</label>
      <%= f.input :password, required: false, wrapper:false, label:false, input_html: {class: "box"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-primary btn btn-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
