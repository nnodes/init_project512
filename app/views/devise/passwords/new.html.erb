<div class="row row-eq-height row-flex-center full-height-login">
  <div class="col-md-4">
    <h2>Forgot your password?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form-group">
          <label>Email</label>
          <%= f.input :email, required: false, autofocus: true, wrapper:false, label:false, input_html: {class: "form-control"} %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn-primary btn btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
