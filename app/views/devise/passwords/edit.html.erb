<div class="col-md-4 col-md-offset-4">
  <div class="card">
    <img class="logo m-b-30" alt="Nnodes" src="<%= asset_path 'logo.png' %>" height="100">
    <h2>Cambiar contrase単a</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
      <div class="form-group">
        <label class="control-label">Nueva contrase単a</label>
         <%= f.input :password,required: true, autofocus: true, hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length), wrapper:false, label:false, input_html: {class: 'form-control'}  %>
      </div>
      <div class="form-group">
        <label class="control-label">Confirmar contrase単a</label>
         <%= f.input :password_confirmation, required: true, wrapper:false, label:false, input_html: {class: 'form-control'} %>
      </div>
      <div class="form-actions row m-t-10">
        <div class="col-md-8 pull-right">
          <%= f.button :submit, "Cambiar contrase単a", class: "btn btn-success full" %>
        </div>
      </div>
    <% end %>
    <%# render "devise/shared/links" %>
  </div>
</div>
