<div class="row">
  <div class="col-md-10 col-xs-8">
    <h3 class="text-uppercase"><%= plural_table_name.titleize %></h3>
  </div>
  <div class="col-md-2 col-xs-4">
    <%%= link_to "<%= I18n.t('helpers.links.new') %>", new_<%= singular_table_name %>_path, class: 'btn btn-primary btn-block m-t-20' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped nn-default-datatable m-b-20">
    <thead>
      <tr>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <th><%= attribute.human_name %></th>
        <% end -%>
        <th style="width:160px;min-width:160px;max-width:160px;" data-orderable="false"></th>
      </tr>
    </thead>
    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <% attributes.reject(&:password_digest?).each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td>
            <%%= link_to "<%= I18n.t('helpers.links.show') %>", <%= singular_table_name %>, class: 'btn btn-success btn-xs' %> 
            <%%= link_to "<%= I18n.t('helpers.links.edit') %>", edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-warning btn-xs' %> 
            <%%= link_to "<%= I18n.t('helpers.links.destroy') %>", <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>